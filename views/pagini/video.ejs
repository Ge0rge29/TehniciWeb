<!DOCTYPE html>
<html lang="ro">
    <head>
        <title>Video - GSports</title>
        <%- include("../fragmente/head.ejs") %>
        <link rel="stylesheet" href="/resurse/css/style_etapa4.css" type="text/css" />
    </head>
    <body>
        <%- include("../fragmente/header.ejs") %>
        <main>
            <div class="video-container">
                <video controls 
                       preload="metadata"
                       poster="/resurse/imagini/video-poster.jpg">
                    <source src="/resurse/video/fotbal_etapa4_task.mp4" type="video/mp4">
                    <source src="/resurse/video/fotbal_etapa4_task.ogv" type="video/ogg">
                    <track label="Română" 
                           kind="captions" 
                           srclang="ro" 
                           src="/resurse/video/tracks/captions_ro.vtt"
                           default>
                    <track label="English" 
                           kind="captions" 
                           srclang="en" 
                           src="/resurse/video/tracks/captions_en.vtt">
                    Your browser does not support the video tag.
                </video>
            </div>
        </main>
        <%- include("../fragmente/footer.ejs") %>
    </body>
</html>
